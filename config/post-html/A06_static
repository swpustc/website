#!/bin/bash
## Work Directory: /home/git/html/
## User: git

### static
cat DOCTYPE.shtml                 | tee static/400.html    >/dev/null
cat static/400_header.shtml       | tee static/400.html -a >/dev/null
cat header.shtml                  | sed "s/<li><!--CURRENT:ERR400-->/<li class=\"current\">/g" \
                                  | sed "s/<li><!--CURRENT:ERRPAGE-->/<li class=\"current\">/g" \
                                  | sed "s/<li><!--CURRENT:HOME-->/<li class=\"current\">/g" \
                                  | sed "s/<li><!--CURRENT:[^>]*-->/<li>/g" \
                                  | tee static/400.html -a >/dev/null
cat 400_body.shtml                | tee static/400.html -a >/dev/null
cat footer.shtml                  | tee static/400.html -a >/dev/null
cat static/jquery.shtml           | tee static/400.html -a >/dev/null
cat static/errorpage_footer.shtml | tee static/400.html -a >/dev/null
echo Generate static/400.html
rm static/400_header.shtml
